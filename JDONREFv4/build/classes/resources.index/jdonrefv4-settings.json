{
    "index" : {
        "index.store.type": "memory",
        "analysis" : {
            "analyzer": {
                "jdonrefv4_score_analyzer" : {
                    "type" : "custom",
                    "tokenizer" : "whitespace",
                    "filter" : ["lowercase", "french_elision", "french_stop" , "french_stemmer", "delimited_payload_filter","count_token_as_value"]
                },
                "jdonrefv4_index_token_count" : {
                    "type" : "custom",
                    "tokenizer" : "whitespace",
                    "filter" : ["lowercase", "french_elision", "french_stop" , "french_stemmer"]
                },
                "jdonrefv4_index" : {
                    "type" : "custom",
                    "tokenizer" : "whitespace",
                    "filter" : ["lowercase", "french_elision", "french_stop" , "french_stemmer" ]
                },
                "jdonrefv4_codes_index" : {
                    "type" : "custom",
                    "tokenizer" : "standard",
                    "filter" : ["standard", "lowercase"]
                },
                "jdonrefv4_search_unsplit" : {
                    "type" : "custom",
                    "tokenizer" : "standard",
                    "filter" : ["lowercase", "french_elision", "french_stop","french_stemmer"]
                },
                "jdonrefv4_search" : {
                    "type" : "custom",
                    "tokenizer" : "standard",
                    "filter" : ["lowercase", "french_elision", "french_stop","french_stemmer"]
                }
            },
            "filter" : {
                "count_token_as_value" : {
                    "type": "count_token_as_value"
                },
                "delimited_payload_filter" : {
                    "type": "delimited_payload_filter",
                    "encoding": "int"
                },
                "french_elision": {
                  "type":         "elision",
                  "articles": [ "l", "m", "qu", "n", "s",
                                  "j", "jusqu", "quoiqu",
                                  "lorsqu", "puisqu"
                              ]
                },
                "french_stop": {
                  "type":       "stop",
                  "stopwords":  "_french_" 
                },
                "french_stemmer": {
                  "type":       "stemmer",
                  "language":   "light_french"
                }
            }
        }
    }
}